<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.welcome.Welcome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/welcome_bg">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/jinja_hub_logo"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hey Patrick,"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/name"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome \nBack on Board"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/welcome"
                android:textSize="25sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kindly proceed to your dashboard"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textSize="21sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/welcome_home_img"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spec_occ_button_bg"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Dashboard"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:padding="20dp"
        android:id="@+id/go"/>

</RelativeLayout>