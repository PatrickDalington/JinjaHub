<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/layout"
    android:gravity="center_vertical"
    android:padding="19dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/option_background_selector">

    <!-- Icon -->
    <ImageView
        android:id="@+id/optionIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/male_black"
        android:contentDescription="Option Icon" />

    <!-- Text -->
    <TextView
        android:id="@+id/optionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Male"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <!-- Radio Button -->
    <RadioButton
        android:id="@+id/optionRadioButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:button="@null"
        android:background="@drawable/radio_button_selector" />
</LinearLayout>
