<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Profile Image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_image" />

    <!-- Chat Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- User Name -->
        <TextView
            android:id="@+id/chatUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Patrick"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Last Message -->
        <TextView
            android:id="@+id/chatLastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good evening, are you available..."
            android:textSize="14sp"
            android:textColor="@color/grey" />
    </LinearLayout>

    <!-- Timestamp & Unread Count -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Timestamp -->
        <TextView
            android:id="@+id/chatTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Now"
            android:textSize="12sp"
            android:textColor="@color/grey" />

        <!-- Unread Count -->
        <TextView
            android:id="@+id/chatUnreadCount"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/circular_badge"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
