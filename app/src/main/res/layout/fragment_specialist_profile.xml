<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".ui.specialist_profile.SpecialistProfileFragment">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile_back_arrow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="23sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/spec_chat"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/chat_icon"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/spec_heart_on"
                    android:id="@+id/heart_icon"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:id="@+id/rel1"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/profile_image"
                    android:id="@+id/profile_image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DR. Patrick Dalington"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/profile_image"
                    android:id="@+id/name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MBBS, BCS(health), MD(Neurology)\nMRCOG (Gynae &amp; Obs).(UK)(Gynae &amp; Obs)"
                    android:layout_below="@id/name"
                    android:layout_marginStart="10dp"
                    android:textSize="11sp"
                    android:layout_toEndOf="@id/profile_image"
                    android:id="@+id/description"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surgeon"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:paddingEnd="6dp"
                    android:paddingStart="6dp"
                    android:paddingBottom="2dp"
                    android:textSize="11sp"
                    android:background="@drawable/spec_occ_bg"
                    android:layout_below="@id/description"
                    android:layout_toEndOf="@id/profile_image"
                    android:id="@+id/occupation"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel1"
                android:id="@+id/lin1"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:layout_marginStart="28dp"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:text="Total Experience"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14+ years"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="top"
                    android:src="@drawable/spec_line"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:text="Total Rating"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⭐️"
                            android:id="@+id/star"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textStyle="bold"
                            android:layout_marginStart="5dp"
                            android:id="@+id/rating"
                            android:layout_toEndOf="@id/star"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(246)"
                            android:layout_toEndOf="@id/rating"/>

                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="top"
                    android:src="@drawable/spec_line"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:text="BMDC Number"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AFA78SN"
                        android:layout_marginTop="2dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Working in"
                android:layout_below="@+id/lin1"
                android:layout_marginStart="14dp"
                android:textStyle="bold"
                android:textColor="#888888"
                android:textSize="12sp"
                android:id="@+id/working"
                android:layout_marginTop="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="University Teaching Hospital Owerri"
                android:layout_below="@+id/working"
                android:textStyle="bold"
                android:layout_marginStart="14dp"
                android:textColor="@color/black"
                android:id="@+id/place_of_work"/>


            <LinearLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:id="@+id/lin2"
                android:layout_marginEnd="14dp"
                android:layout_below="@id/place_of_work"
                android:layout_marginTop="20dp"
                android:orientation="vertical">


                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@drawable/spec_occ_tablayout_bg"
                     />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:layout_below="@id/lin2"
                android:layout_marginTop="20dp"
                android:id="@+id/button_layout"
                android:background="#00FFFFFF">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Reach out"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:id="@+id/chat"
                    android:background="@drawable/spec_occ_button_bg"
                    android:layout_marginBottom="80dp"
                    android:layout_margin="10dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>