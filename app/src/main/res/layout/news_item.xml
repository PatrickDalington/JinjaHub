<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="13dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Profile Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <!-- User Info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/headline"
                android:textSize="22sp"
                android:ellipsize="end"
                android:textStyle="bold"
                android:maxLines="2"
                android:text="The CEO is give every member 4k to Share and Celebrate With Family"
                android:textColor="#000000" />


        </LinearLayout>




    </LinearLayout>

    <!-- Post Text -->
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="The day when nobody thinks we are going to be blessed now God has blessed us with the amzing CEO"
        android:textSize="14sp"
        android:textColor="#000000" />

    <!-- Post Image -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/home_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/customer_care_3"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>


    <!-- Footer Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp">

        <!-- Likes -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heart_layout"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="50dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/heart_like"
                android:src="@drawable/heart" />

            <TextView
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:text=""
                android:textColor="#888888"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Comments -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="50dp"
            android:id="@+id/comments"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/comment" /> <!-- Replace with comment drawable -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text=""
                android:id="@+id/comment_count"
                android:textSize="12sp"
                android:textColor="#888888" />
        </LinearLayout>

        <!-- Shares -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/share"
            android:orientation="horizontal"

            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/share" /> <!-- Replace with share drawable -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text=""
                android:id="@+id/num_of_shares"
                android:textSize="12sp"
                android:textColor="#888888" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:05pm"
            android:layout_gravity="end"
            android:gravity="end"
            android:textSize="12sp"
            android:layout_marginEnd="7dp"
            android:id="@+id/time"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0DEDE"
        android:layout_marginTop="25dp"/>
</LinearLayout>
