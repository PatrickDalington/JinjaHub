<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="9dp">

    <!-- Profile Image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Chat bubble with text -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_sent"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:maxWidth="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/profile_image">

        <!-- Text message -->
        <TextView
            android:id="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="290dp"
            android:text="Come to the house and found out for your selff wht is happen"
            android:textSize="16sp"
            android:layout_marginEnd="6dp"
            android:padding="0dp"
            android:autoLink="web|email"
            android:linksClickable="true"
            android:textColorLink="#FFC107"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Message status (sent) -->
        <TextView
            android:id="@+id/text_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sent"
            android:textColor="#E6E3E3"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintTop_toBottomOf="@id/text_message"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Optional image (hidden by default) -->
    <ImageView
        android:id="@+id/left_image_chat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="6dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/r2"
        app:layout_constraintStart_toEndOf="@id/profile_image" />
</androidx.constraintlayout.widget.ConstraintLayout>
